<div class="cnt">

<%= form_for :location, url: locations_path do |f| %>
      <div class="field">
        <%= f.label :Name,:class => "label" %>
        <%= f.text_field :name, autofocus: true %>
      </div>

      <div class="actions">
        <%= f.submit "Save Location",:class => "btn btn-success" %>
      </div>

<% end %>
  <%=link_to 'Profile Page',new_account_user_registration_path,:class => "btn btn-default"%>
  <%=link_to 'View User Locations',locations_path,:class => "btn btn-info"%>
</div>