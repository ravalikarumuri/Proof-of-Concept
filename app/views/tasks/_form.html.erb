<div class="cnt">

  <%= form_for :task, url: tasks_path do |f| %>
      <div class="field">
        <%= f.label :Name,:class => "label" %>
        <%= f.text_field :name, autofocus: true %>
      </div>

      <div class="field">
        <%= f.label :Price,:class => "label" %>
        <%= f.text_field :price %>
      </div>

      <div class="actions">
        <%= f.submit "Save Task",:class => "btn btn-success" %>
      </div>

  <% end %>
  <%=link_to 'View Tasks',tasks_path,:class => "btn btn-info"%>
</div>